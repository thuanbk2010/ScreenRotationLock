<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="bottom" android:top="3dp" android:bottom="0dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="4dp" />
            <!--<gradient android:gradientRadius="128dp" android:type="radial" android:startColor="#40000000" android:endColor="#40000000" />-->
        </shape>
    </item>

    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp" android:gravity="top|center_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <stroke android:color="@color/colorPrimary"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>